workspace 'DGCollectionViewLeftAlignFlowLayout.xcworkspace'

## Frameworks targets
abstract_target 'Frameworks' do
	use_frameworks!
	target 'DGCollectionViewLeftAlignFlowLayout-iOS' do
		platform :ios, '8.0'
	end

	target 'DGCollectionViewLeftAlignFlowLayout-tvOS' do
		platform :tvos, '9.0'
	end
end

